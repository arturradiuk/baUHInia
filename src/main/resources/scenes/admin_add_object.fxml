<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="boarderPane" maxHeight="-Infinity" prefHeight="200" prefWidth="600" stylesheets="/scenes/simulation_view.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
         <HBox prefHeight="100.0" prefWidth="200.0">
            <padding>
               <Insets left="16.0" top="2.0" />
            </padding>
            <children>
               <Label prefHeight="37.0" prefWidth="100.0" text="Nazwa:" />
               <TextField fx:id="nameField" prefWidth="149.0">
                  <HBox.margin>
                     <Insets right="35.0" />
                  </HBox.margin></TextField>
               <Label prefHeight="37.0" prefWidth="150.0" text="Szerokość:" />
               <TextField fx:id="widthField" prefWidth="149.0">
                  <HBox.margin>
                     <Insets />
                  </HBox.margin></TextField>
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <padding>
               <Insets left="16.0" top="2.0" />
            </padding>
            <children>
               <Label prefHeight="37.0" prefWidth="100.0" text="Długość:" />
               <TextField fx:id="lengthField">
                  <HBox.margin>
                     <Insets right="35.0" />
                  </HBox.margin></TextField>
               <Label prefHeight="37.0" prefWidth="150.0" text="Wysokość:" textAlignment="RIGHT" />
               <TextField fx:id="heightField" />
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <padding>
               <Insets left="16.0" top="2.0" />
            </padding>
            <children>
               <Label prefHeight="37.0" prefWidth="100.0" text="Typ obiektu" />
               <ChoiceBox fx:id="objectTypeList" prefWidth="150.0">
                  <HBox.margin>
                     <Insets right="35.0" />
                  </HBox.margin>
               </ChoiceBox>
               <Label prefHeight="27.0" prefWidth="150.0" text="Dozwolona powierzchnia:" />
               <ChoiceBox fx:id="allowedTypeList" prefWidth="150.0" />
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <padding>
               <Insets left="16.0" top="2.0" />
            </padding>
         <children>
            <Label prefHeight="37.0" prefWidth="100.0" text="Cena:" />
            <TextField fx:id="priceField">
                  <HBox.margin>
                     <Insets right="35.0" />
                  </HBox.margin></TextField>
               <Label prefHeight="27.0" prefWidth="150.0" text="Współczynnik ciepła:" />
               <TextField fx:id="heatFactorField" />
         </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <padding>
               <Insets left="16.0" top="2.0" />
            </padding>
            <children>
               <Label prefHeight="37.0" prefWidth="100.0" text="Plik graficzny:" />
               <TextField fx:id="saveField" prefHeight="25.0" prefWidth="390.0" />
               <Button mnemonicParsing="false" onMouseClicked="#browse" prefHeight="25.0" prefWidth="91.0" style="-fx-background-color: #70af85; -fx-border-color: #f0e2d0; -fx-border-width: 0;" text="Przeglądaj" textAlignment="CENTER" textFill="#f0e2d0" BorderPane.alignment="CENTER">
                  <HBox.margin>
                     <Insets left="10.0" right="10.0" />
                  </HBox.margin></Button>
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <padding>
               <Insets left="250.0" top="2.0" />
            </padding>
            <Button fx:id="saveBtn" mnemonicParsing="false" onMouseClicked="#saveObject" prefWidth="100.0" style="-fx-background-color: #70af85; -fx-border-color: #f0e2d0; -fx-border-width: 0;" text="Zapisz" textAlignment="CENTER" textFill="#f0e2d0" BorderPane.alignment="CENTER" />
         </HBox>
      </VBox>
   </center>
</BorderPane>
